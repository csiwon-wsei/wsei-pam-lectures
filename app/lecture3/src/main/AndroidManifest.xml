<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
        <intent>
            <action android:name="android.media.action.VIDEO_CAPTURE" />
        </intent>
    </queries>

    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lectures"
        tools:targetApi="31">
        <activity
            android:name="pl.wsei.pam.lecture3.navigation.L3NavigationActivity"
            android:exported="false" />
        <activity
            android:name="pl.recordit.pam.lecture3.pl.wsei.pam.lectures.lecture3.recycler.L3RecyclerViewActivity"
            android:exported="false" />
        <activity
            android:name="pl.recordit.pam.lecture3.pl.wsei.pam.lectures.lecture3.group.L3GroupViewActivity"
            android:exported="false" />
        <activity
            android:name="pl.recordit.pam.lecture3.pl.wsei.pam.lectures.lecture3.photo.L3TakePhotoActivity"
            android:exported="false" />
        <activity
            android:name="pl.recordit.pam.lecture3.pl.wsei.pam.lectures.lecture3.image.L3GetImageActivity"
            android:exported="false" />
        <activity
            android:name="pl.recordit.pam.lecture3.pl.wsei.pam.lectures.lecture3.parameters.L3ParameterActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false" />
        <activity
            android:name="pl.recordit.pam.lecture3.pl.wsei.pam.lectures.lecture3.Lecture03Activity"
            android:exported="false" />
        <activity
            android:name="pl.wsei.pam.lectures.lecture3.Lecture03Activity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>