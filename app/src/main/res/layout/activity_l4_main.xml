<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l4MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".lecture4.Lecture04Activity">

    <Button
        android:id="@+id/l4Example1Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="l4Example01Run"
        android:text="Data Binding"
        app:layout_constraintBottom_toTopOf="@+id/l4Example2Btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/l4Example2Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="l4Example02Run"
        android:text="Fragments"
        app:layout_constraintBottom_toTopOf="@+id/l4Example3Btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l4Example1Btn"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/l4Example3Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="l4Example03Run"
        android:text="Activity Life Cycle"
        app:layout_constraintBottom_toTopOf="@+id/l4Example4Btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l4Example2Btn"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/l4Example4Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="l4Example04Run"
        android:text="Fragment Life Cycle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l4Example3Btn"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>