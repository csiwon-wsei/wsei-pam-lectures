<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lectures" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wsei_primary</item>
        <item name="colorPrimaryVariant">#507532</item>
        <item name="colorOnPrimary">@color/wsei_secondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/wsei_secondary</item>
        <item name="colorSecondaryVariant">#2A2F36</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorTertiary">@color/wsei_tertiary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/wsei_tertiary</item>
        <item name="android:forceDarkAllowed">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/wsei_secondary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">4sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:radius">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Theme.Lectures.Headline1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="Theme.Lectures.Fullscreen" parent="Theme.Lectures">
        <item name="android:actionBarStyle">@style/Widget.Theme.Lectures.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ThemeOverlay.Lectures.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.Lectures.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Lectures.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Lectures.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Base application theme. -->
    <style name="Base.Theme.Lectures" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>